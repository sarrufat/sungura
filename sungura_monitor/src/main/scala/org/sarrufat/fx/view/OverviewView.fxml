<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="overviewRoot" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.sarrufat.fx.controller.OverviewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="1000.0">
         <children>
            <Group>
               <children>
                  <Label text="Global counts" textAlignment="CENTER" textFill="#075e0b">
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                     </padding>
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox layoutX="10.0" layoutY="30.0" spacing="10.0">
                     <children>
                        <Button fx:id="connectionsButton" mnemonicParsing="false" onAction="#onConnections" text="Connections 0" />
                        <Button fx:id="channelsButton" mnemonicParsing="false" text="Channels 0" />
                        <Button fx:id="exchangesButton" mnemonicParsing="false" text="Exchanges 0" />
                        <Button fx:id="queuesButton" mnemonicParsing="false" text="Queues 0" />
                        <Button fx:id="consumersButton" mnemonicParsing="false" text="Consumers 0" />
                     </children>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <padding>
                        <Insets bottom="5.0" />
                     </padding>
                  </HBox>
               </children>
            </Group>
            <Separator prefHeight="0.0" prefWidth="1000.0" />
            <HBox>
               <children>
                  <LineChart fx:id="msgRatesChart" alternativeColumnFillVisible="true" title="Message rates" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis label="M/S" side="LEFT" />
                     </yAxis>
                  </LineChart>
                  <Separator orientation="VERTICAL" prefHeight="200.0" />
                  <LineChart fx:id="queueTotalsChart" title="Queued messages">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis label="Messages" side="LEFT" />
                     </yAxis>
                  </LineChart>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
